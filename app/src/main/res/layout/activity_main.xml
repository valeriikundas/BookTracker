<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="valeriykundas.booktracker.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/new_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
	    android:background="@color/colorPrimary">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/main_activity_main_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

	    <ImageButton
		    android:id="@+id/imagebutton"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:onClick="onImageButtonClick"
		    android:src="@drawable/books"
		    android:visibility="gone" />

	    <ImageView
		    android:id="@+id/image"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:visibility="gone" />

	    <AutoCompleteTextView
		    android:id="@+id/booktitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
		    android:layout_marginHorizontal="10pt"
		    android:layout_marginTop="20dp"
		    android:gravity="center"
            android:hint="@string/hint_book_title"
            android:textSize="30sp" />

		<EditText
			android:id="@+id/curpage"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<TextView
            android:id="@+id/stopwatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stopwatch_starting_time"
            android:textSize="50sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/startButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:onClick="onStartButtonClick"
                android:text="@string/start" />

            <Button
                android:id="@+id/pauseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:onClick="onPauseButtonClick"
                android:text="@string/pause" />

            <Button
                android:id="@+id/stopButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:onClick="onStopButtonClick"
                android:text="@string/stop" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
